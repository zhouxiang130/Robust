<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:splitMotionEvents="false">

    <ScrollView
        android:id="@+id/defineScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/frag_mine_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dis180"
                    android:background="@color/C50_BD_B5"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/dis30"
                        android:layout_height="@dimen/dis30"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/dis15"
                        android:layout_marginTop="@dimen/dis28">

                        <ImageView
                            android:layout_width="@dimen/dis22"
                            android:layout_height="@dimen/dis22"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dis3"
                            android:src="@mipmap/message"/>

                        <TextView
                            android:id="@+id/frag_mine_tv_info"
                            android:layout_width="@dimen/dis16"
                            android:layout_height="@dimen/dis16"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_round360_white"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/CE8_3C_3C"
                            android:textSize="@dimen/font8"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dis7"
                    android:layout_marginRight="@dimen/dis7"
                    android:layout_marginTop="@dimen/dis60"
                    android:background="@mipmap/rec"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/frag_mine_login_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.yj.robust.widget.RoundedImageView.RoundedImageView
                            android:id="@+id/frag_mine_login_iv"
                            android:layout_width="@dimen/dis55"
                            android:layout_height="@dimen/dis55"
                            android:layout_margin="@dimen/dis15"
                            android:scaleType="fitXY"
                            android:src="@mipmap/uuser"
                            app:riv_border_color="@color/white"
                            app:riv_border_width="@dimen/dis1"
                            app:riv_corner_radius="360dp"/>

                        <LinearLayout
                            android:id="@+id/frag_mine_login_ll"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingTop="5dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/mine_new_tv_login"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="11"
                                android:paddingTop="5dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/font16"/>

                            <TextView
                                android:id="@+id/mine_new_tv_tel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/dis5"
                                android:paddingBottom="@dimen/dis2"
                                android:paddingRight="@dimen/dis7"
                                android:paddingTop="@dimen/dis5"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/font15"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_login"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="登录/注册"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font18"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/iv_qr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/dis15"
                            android:src="@mipmap/qr"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rl_wallet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/dis6"
                                android:drawablePadding="@dimen/dis8"
                                android:drawableTop="@mipmap/wallet"
                                android:text="钱包"
                                android:textColor="@color/C10_10_10"
                                android:textSize="@dimen/font12"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="@dimen/dis0.5"
                            android:layout_height="@dimen/dis20"
                            android:layout_gravity="center"
                            android:background="@color/CE7_E7_E7"/>

                        <RelativeLayout
                            android:id="@+id/rl_coupon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/dis6"
                                android:drawablePadding="@dimen/dis8"
                                android:drawableTop="@mipmap/coupon"
                                android:text="优惠券"
                                android:textColor="@color/C10_10_10"
                                android:textSize="@dimen/font12"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="@dimen/dis0.5"
                            android:layout_height="@dimen/dis20"
                            android:layout_gravity="center"
                            android:background="@color/CE7_E7_E7"/>

                        <RelativeLayout
                            android:id="@+id/rl_integration"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/dis6"
                                android:drawablePadding="@dimen/dis8"
                                android:drawableTop="@mipmap/integration"
                                android:text="我的积分"
                                android:textColor="@color/C10_10_10"
                                android:textSize="@dimen/font12"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <com.yj.robust.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/frag_mine_order_all"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dis50">

                    <TextView
                        android:id="@+id/mine_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dis18"
                        android:text="我的订单"
                        android:textColor="@color/C10_10_10"
                        android:textSize="@dimen/font14"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dis15"
                        android:drawablePadding="@dimen/dis4"
                        android:drawableRight="@mipmap/next_center_order"
                        android:gravity="center"
                        android:text="查看全部"
                        android:textColor="@color/C64_64_64"
                        android:textSize="@dimen/font12"/>
                </RelativeLayout>
            </com.yj.robust.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis75"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/frag_mine_order_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/frag_mine_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dis6"
                            android:drawablePadding="@dimen/dis8"
                            android:drawableTop="@mipmap/payable"
                            android:text="待付款"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font12"/>

                        <TextView
                            android:id="@+id/frag_mine_tv_pay_num"
                            android:layout_width="@dimen/dis16"
                            android:layout_height="@dimen/dis16"
                            android:layout_alignRight="@id/frag_mine_tv1"
                            android:background="@drawable/shape_round360_e83_stroke1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/CE8_3C_3C"
                            android:textSize="@dimen/font11"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frag_mine_order_send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/frag_mine_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dis6"
                            android:drawablePadding="@dimen/dis8"
                            android:drawableTop="@mipmap/shipment"
                            android:text="待发货"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font12"/>

                        <TextView
                            android:id="@+id/frag_mine_tv_send_num"
                            android:layout_width="@dimen/dis16"
                            android:layout_height="@dimen/dis16"
                            android:layout_alignRight="@id/frag_mine_tv2"
                            android:background="@drawable/shape_round360_e83_stroke1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/CE8_3C_3C"
                            android:textSize="@dimen/font11"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frag_mine_order_get"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/frag_mine_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dis6"
                            android:drawablePadding="@dimen/dis8"
                            android:drawableTop="@mipmap/receipt"
                            android:text="待收货"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font12"/>

                        <TextView
                            android:id="@+id/frag_mine_tv_get_num"
                            android:layout_width="@dimen/dis16"
                            android:layout_height="@dimen/dis16"
                            android:layout_alignRight="@id/frag_mine_tv3"
                            android:background="@drawable/shape_round360_e83_stroke1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/CE8_3C_3C"
                            android:textSize="@dimen/font11"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frag_mine_order_judge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/frag_mine_tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dis6"
                            android:drawablePadding="@dimen/dis8"
                            android:drawableTop="@mipmap/evaluate"
                            android:text="待评价"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font12"/>

                        <TextView
                            android:id="@+id/frag_mine_tv_judge_num"
                            android:layout_width="@dimen/dis16"
                            android:layout_height="@dimen/dis16"
                            android:layout_alignRight="@id/frag_mine_tv4"
                            android:background="@drawable/shape_round360_e83_stroke1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/CE8_3C_3C"
                            android:textSize="@dimen/font11"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frag_mine_order_drawback"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/frag_mine_tv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dis6"
                            android:drawablePadding="@dimen/dis8"
                            android:drawableTop="@mipmap/return_goods"
                            android:text="退款"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font12"/>

                        <TextView
                            android:id="@+id/frag_mine_tv_drawback_num"
                            android:layout_width="@dimen/dis16"
                            android:layout_height="@dimen/dis16"
                            android:layout_alignRight="@id/frag_mine_tv5"
                            android:background="@drawable/shape_round360_e83_stroke1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/CE8_3C_3C"
                            android:textSize="@dimen/font11"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis10"
                android:background="@color/CFA_FA_FA"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dis50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dis18"
                        android:text="常用工具"
                        android:textColor="@color/C10_10_10"
                        android:textSize="@dimen/font14"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/frag_mine_collection"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dis8"
                            android:drawableTop="@mipmap/collect"
                            android:gravity="center"
                            android:text="我的收藏"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font13"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/frag_mine_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dis8"
                            android:drawableTop="@mipmap/address"
                            android:gravity="center"
                            android:text="地址管理"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font13"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/frag_mine_coustom_service"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dis8"
                            android:drawableTop="@mipmap/customer"
                            android:gravity="center"
                            android:text="在线客服"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font13"/>

                        <TextView
                            android:id="@+id/frag_mine_tv_coustom_service_msg_num"
                            android:layout_width="@dimen/dis16"
                            android:layout_height="@dimen/dis16"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/shape_round360_e83_stroke2"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font11"
                            android:visibility="gone"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/frag_mine_rl_setting"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dis8"
                            android:drawableTop="@mipmap/install"
                            android:gravity="center"
                            android:text="系统设置"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font13"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:id="@+id/ll_open"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dis8"
                            android:drawableTop="@mipmap/open_head"
                            android:gravity="center"
                            android:text="开通团长"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font13"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dis8"
                            android:drawableTop="@mipmap/team"
                            android:gravity="center"
                            android:text="我的团队"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font13"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>