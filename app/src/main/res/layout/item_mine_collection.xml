<?xml version="1.0" encoding="utf-8"?>
<com.yj.robust.widget.SwipeItemLayout.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mine_collection_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/mine_collection_rl_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis125"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis102"
                android:layout_marginTop="@dimen/dis14">

                <ImageView
                    android:id="@+id/item_mine_collection_iv"
                    android:layout_width="@dimen/dis108"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dis12"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_goods"/>

                <TextView
                    android:id="@+id/item_mine_collection_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dis12"
                    android:layout_marginRight="@dimen/dis15"
                    android:layout_toRightOf="@id/item_mine_collection_iv"
                    android:maxLines="2"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font14"

                    />


                <TextView
                    android:id="@+id/item_mine_collection_freight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dis12"
                    android:layout_toRightOf="@id/item_mine_collection_iv"
                    android:paddingBottom="@dimen/dis2"
                    android:text=""
                    android:visibility="gone"
                    android:textSize="@dimen/font14"/>

                <TextView
                    android:id="@+id/item_mine_collection_monthly_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/item_mine_collection_freight"
                    android:layout_marginBottom="@dimen/dis15"
                    android:layout_marginLeft="@dimen/dis12"
                    android:layout_toRightOf="@id/item_mine_collection_iv"
                    android:text=""
                    android:visibility="gone"
                    android:textSize="@dimen/font13"/>


                <TextView
                    android:id="@+id/item_mine_collection_wuliu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好新优物流"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font13"
                    android:paddingBottom="@dimen/dis2"
                    android:paddingLeft="@dimen/dis5"
                    android:paddingRight="@dimen/dis4"
                    android:paddingTop="@dimen/dis2"
                    android:visibility="gone"
                    android:background="@drawable/shape_corner_e8_radius3"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/item_mine_collection_title"
                    android:layout_alignEnd="@+id/item_mine_collection_title"/>





                <TextView
                    android:id="@+id/item_mine_collection_tvhot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dis12"
                    android:layout_toRightOf="@id/item_mine_collection_iv"
                    android:background="@drawable/shape_corner_e8_stroke0_5_white_radius2"
                    android:paddingBottom="@dimen/dis2"
                    android:paddingLeft="@dimen/dis4"
                    android:paddingRight="@dimen/dis4"
                    android:paddingTop="@dimen/dis2"
                    android:text="热卖"
                    android:textColor="@color/CE8_3C_3C"
                    android:textSize="@dimen/font10"

                    />

                <TextView
                    android:id="@+id/item_mine_collection_judge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dis8"
                    android:layout_toRightOf="@id/item_mine_collection_tvhot"
                    android:textColor="@color/C64_64_64"
                    android:textSize="@dimen/font10"/>

                <LinearLayout
                    android:id="@+id/ll_product_price_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/item_mine_collection_judge"
                    android:layout_marginBottom="@dimen/dis10"
                    android:layout_marginLeft="@dimen/dis12"
                    android:layout_toRightOf="@id/item_mine_collection_iv"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/CE8_3C_3C"
                        android:textSize="@dimen/font12"/>

                    <TextView
                        android:id="@+id/item_mine_collection_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/CE8_3C_3C"
                        android:textSize="@dimen/font16"/>

                    <TextView
                        android:id="@+id/item_mine_collection_tvop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dis2"
                        android:textColor="@color/C85_85_85"
                        android:textSize="@dimen/font10"/>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis0.5"
            android:background="@color/CE4_E4_E4"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_collection_ll_delete"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dis125"
        android:background="@color/CE8_3C_3C"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dis18"
            android:layout_marginRight="@dimen/dis18"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/font17"/>
    </LinearLayout>
</com.yj.robust.widget.SwipeItemLayout.SwipeItemLayout>